    },
    "appService": {
      "type": "object",
      "value": {
        "id": "[resourceId('Microsoft.Web/sites', parameters('appServiceName'))]",
        "name": "[parameters('appServiceName')]",
        "url": "[format('https://{0}.azurewebsites.net', parameters('appServiceName'))]",
        "planId": "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
        "planName": "[parameters('appServicePlanName')]"
